<h2 class="page-title">Registration</h2>
{{log color}}
<form class="pure-form pure-form-stacked signup-form">
    <fieldset>
        <label for="username-signup">Username</label>
        <input type="text" id="username-signup" placeholder="Username" />
        <label for="email-signup">Email</label>
        <input type="email" id="email-signup" placeholder="Email" />
        <label for="twitter-signup">Twitter:</label>
        <input type="text" id="twitter-signup" placeholder="Twitter"/>
        <label for="password-signup">Password</label>
        <input type="password" id="password-signup" placeholder="Password" />
        <button style="background-color:{{color}};" type="submit" class="pure-button pure-button-primary signup-btn">Register</button>
    </fieldset>
</form>

<!-- javascript file-->
<script src="/javascript/signup.js"></script>