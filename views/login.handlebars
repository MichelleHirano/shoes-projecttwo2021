<div class="pure-g background-black">
    <div class="pure-u-1-8"></div>
    <div class="pure-u-7-8">
        <h2 class="page-title">Login</h2>
        {{log color}}
        <form class="pure-form pure-form-stacked login-form">
            <fieldset class="text-color">
              <label for="email-login">Email</label>
              <input type="email" id="email-login" placeholder="Email"/>
              <label for="password-login">Password</label>
              <input type="password" id="password-login" placeholder="Password" />
              <button style= "background-color:{{color}};" type="submit" class="pure-button pure-button-primary login-btn">Login</button>
            </fieldset>
            <p class="login-signup-title text-color">Not a user?</p>
            <a href="/signup"><button style="background-color:{{color}};" type="button" class="pure-button pure-button-primary signup-btn">Sign up</button></a>
        </form>
    </div>
</div>

<!-- javascript file-->
<script src="/javascript/login.js"></script>