<div class="pure-g">
        <div class="pure-u-1-8"></div>
        <div class="pure-u-7-8 blog-content">
            <div class="post-holder">
                <h2 class="shoe-name">{{title}}</h2>
                <img class="img" src="https://images.unsplash.com/photo-1542291026-7eec264c27ff?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8c2hvZXN8ZW58MHx8MHx8&ixlib=rb-1.2.1&w=1000&q=80"></img>
                <div class="post-header pure-g">
                    <div class="pure-u-1-3 user-holder">
                        <a class="user-text">By: {{user.username}}</a>
                    </div>

                    <div class="like-holder pure-u-1-3">
                        <div class="pure-g">
                            <p class="upvote-count pure-u-1-2">{{vote_count}}</p>
                            <a href="https://twitter.com/{{user.twitter}}" class="twitter-link pure-u-1-2">Twitter</a>
                        </div>
                    </div>
                    <p class="post-date pure-u-1-3">{{format_date created_at}}</p>
                </div>
                
                <div class="description-holder">
                    <p class="post-description"><b>Description:</b>  
                    {{post_content}}</p>
                </div>

                <button class="show-comments" id="show-btn">View
                <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
                </button>

            </div>
        </div>
    </div>
    <script src="./javascript/comments-toggle.js"></script>