<!-- create post page -->
<h2 class="page-title">Create Post</h2>
<form class="pure-form pure-form-stacked new-post-form">
    <fieldset>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" placeholder="Title" name="post-title"/>
        <label for="post-content">Description</label>
        <input type="text" id="post-content" placeholder="Description" name="post-content"/>
        <button type="submit" class="pure-button pure-button-primary">Create</button>
    </fieldset>
</form>

<!-- js -->
<script src="/javascript/add-post.js"></script>