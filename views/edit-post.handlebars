<h2 class="page-title">Edit</h2>
<a href="/dashboard" class="pure-button">Cancel</a>
<form class="pure-form pure-form-stacked edit-post-form">
    <fieldset>
        <label for="post-title">Title</label>
        <input type="text" name="post-title" value="{{post.title}}"/>
        <label for="post-content">Description</label>
        <input type="text" name="post-content" value="{{post.post_content}}"/>
    </fieldset>
    <div>
    Created on {{format_date post.created_at}}
    <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="pure-button save-post-btn">Save</button>
    <button type="button" class="pure-button delete-post-btn">Delete</button>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>